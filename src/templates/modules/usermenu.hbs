<ul id="user-menu">
    {{#if displayInboxMenu}}
    <li class="mmooc-menu-item">
        <a href="/conversations{{queryString}}" class="mmooc-menu-item-title conversations" aria-label="conversations">
            <span id="mmooc-unread-messages-count"></span>
        </a>
    </li>
    {{/if}}
    {{#if alertMenuItem}}
        <li class="mmooc-menu-item" id="mmooc-menu-item-varsler">
            <a href="#" class="mmooc-menu-item-title notifications" aria-label="notifications">
                <span id="mmooc-notification-count"></span>
            </a>
            <div class="mmooc-menu-item-drop" id="mmooc-activity-stream">
            </div>
        </li>
    {{/if}}
    <li class="mmooc-menu-item profile-settings" id="mmooc-menu-item-profile-settings">
        <a href="#" class="mmooc-menu-item-title" aria-label="profile menu">
            <div class="ic-avatar" aria-hidden="true">
                <img src="{{user.avatar_image_url}}" alt="{{user.display_name}}" />
            </div>
            <i class="icon-mini-arrow-down"></i>
        </a>
        <div class="mmooc-menu-item-drop" id="mmooc-profile-settings">
            <ul>
                <li>
                    <a href="/profile/settings{{queryString}}">Innstillinger</a>
                </li>
                <li>
                    <a href="/logout{{queryString}}">Logg ut</a>
                </li>
            </ul>
        </div>
    </li>
</ul>