{
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "es5",
  "semi": true,
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": "*.less",
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "trailingComma": "none",
        "semi": true,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    },
    {
      "files": "*.hbs",
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "trailingComma": "none",
        "semi": true,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "printWidth": 80,
        "singleQuote": false,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 2,
        "printWidth": 80,
        "singleQuote": false,
        "trailingComma": "none",
        "semi": true,
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "jsxBracketSameLine": false
      }
    }
  ]
}
