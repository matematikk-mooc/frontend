{
  "name": "mooc",
  "version": "0.1.0",
  "description": "Custom JS and CSS frontend for inclusion in [Canvas](http://www.instructure.com/).",
  "jest": {
    "setupFiles": [
      "<rootDir>/test-env-setup.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "grunt": "^1.6.1",
    "grunt-babel": "^8.0.0",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-clean": "~2.0.1",
    "grunt-contrib-concat": "~2.1.0",
    "grunt-contrib-connect": "~3.0.0",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-handlebars": "3.0.0",
    "grunt-contrib-less": "~3.0.0",
    "grunt-contrib-uglify": "~5.2.2",
    "grunt-contrib-watch": "~1.1.0",
    "grunt-htmlhint": "^0.9.13",
    "grunt-karma": "^4.0.2",
    "grunt-prettier": "^2.2.0",
    "grunt-text-replace": "^0.4.0",
    "htmlhint": "^1.1.4",
    "jasmine-node": "~3.0.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-image-snapshot": "^6.1.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "~2.1",
    "karma-script-launcher": "1.0.0",
    "less-plugin-autoprefix": "^2.0.0",
    "load-grunt-tasks": "5.1.0",
    "prettier": "2.8.7",
    "puppeteer": "^19.10.0",
    "husky": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/matematikk-mooc/frontend.git"
  },
  "scripts": {
    "build": "grunt build",
    "test": "grunt test",
    "start": "grunt serve",
    "lint:html": "npx htmlhint --config .htmlhintrc **/*.html",
    "format:html": "npx prettier --write **/*.html",
    "test:regression": "jest --runInBand",
    "test:regression:update": "jest -u --runInBand",
    "test:regression:course": "jest courses.test.js course.test.js coursePart2.test.js appUnauthenticated.test.js --runInBand",
    "test:regression:user": "jest account.test.js accountPart2.test.js --runInBand",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/matematikk-mooc/frontend/issues"
  },
  "homepage": "https://github.com/matematikk-mooc/frontend#readme",
  "main": "Gruntfile.js",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "author": "",
  "license": "ISC"
}
